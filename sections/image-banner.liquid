<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
</head>

{%- style -%}
  .swiper {
    background: #eee;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
    height: 400px;
    display: flex;
  }
  .swiper-container {
    width: 100%;
    height: 100%;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .swiper-slide h2 {
    font-weight: 700;
    font-size: 36px;
    line-height: 39px;
    text-transform: uppercase;
    color: #ffffff;
    display: flex;
    width: 48.83%;
    text-align: left;
    margin: 0;
  }

  .swiper-slide p {
    font-weight: 400;
    font-size: 16px;
    line-height: 28px;
    color: #ffffff;
    width: 63.83%;
    text-align: left;
    margin-bottom: 42px;
  }

  .swiper-slide a {
    text-decoration: none;
    width: 123px;
    height: 42px;
    background: #f9a82f;
    border-radius: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 16px;
    line-height: 19px;
    color: #ffffff;
  }

  .swiper-slide_first,
  .swiper-slide_second,
  .swiper-slide_third,
  .swiper-slide_fourth {
    height: 100%;
    background-size: cover;
    padding: 75px 10% 0 10%;
    box-sizing: border-box;
    flex-shrink: 0;
  }

  .swiper-slide_first {
    background: url({{ 'banner1.png' | asset_url }});
  }

  .swiper-slide_second {
    background-image: url({{ 'banner2.png' | asset_url }});
  }

  .swiper-slide_third {
    background-image: url({{ 'banner3.png' | asset_url }});
  }

  .swiper-slide_fourth {
    background-image: url({{ 'banner4.png' | asset_url }});
  }

  .swiper-pagination {
    padding: 0 10%;
  }

  .swiper-pagination-bullets.swiper-pagination-horizontal {
    width: auto;
  }

  .swiper-pagination-bullet-active {
    background: #ffffff;
  }

  .swiper-wrapper {
    margin: 0;
    padding: 0;
    list-style-type: none;
  }
{%- endstyle -%}

